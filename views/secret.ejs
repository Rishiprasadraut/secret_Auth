<%- include('partials/header.ejs') %>

<div class="container">
    <div class="secret-container text-center fade-in">
        <i class="fas fa-unlock-alt fa-6x mb-4" style="color:#fff; text-shadow:2px 2px 4px rgba(0,0,0,0.3);"></i>
        <h1 class="secret-text">ðŸŽ‰ Welcome to the Secret Zone! ðŸŽ‰</h1>
        <p class="lead" style="color:rgba(255,255,255,0.9); font-size:1.2rem; margin-bottom:2rem;">
            You've successfully unlocked access to our private community
        </p>

        <div class="user-info">
            <h3 style="color:#fff; margin-bottom:1rem;">
                <i class="fas fa-user-circle me-2"></i>Hi, <%= user.name %>!
            </h3>
            <p style="color:rgba(255,255,255,0.8); margin-bottom:0;">
                <i class="fas fa-envelope me-2"></i><%= user.email %>
            </p>
        </div>

        <div class="mt-4">
            <p style="color:rgba(255,255,255,0.8); font-style:italic; margin-bottom:2rem;">
                "The best way to find out if you can trust somebody is to trust them." â€“ Ernest Hemingway
            </p>
        </div>

        <div class="d-flex justify-content-center gap-3 flex-wrap">
            <a href="/submit" class="btn btn-light btn-lg px-4 py-3">
                <i class="fas fa-plus-circle me-2"></i>Share a Secret
            </a>
            <a href="/logout" class="btn btn-outline-light btn-lg px-4 py-3">
                <i class="fas fa-sign-out-alt me-2"></i>Log Out
            </a>
        </div>

        <div class="mt-4">
            <small style="color:rgba(255,255,255,0.6);">
                <i class="fas fa-shield-alt me-1"></i>
                All posts are fully anonymous
            </small>
        </div>
    </div>
</div>

<hr class="my-5" style="border-color:rgba(255,255,255,0.2);">


<div class="container mt-4">
    <h3 class="text-light mb-4">
        <i class="fas fa-scroll me-2"></i>Recent Anonymous Posts
    </h3>

    <% if (!secrets || secrets.length === 0) { %>
        <p class="text-muted">Nobody has shared anything yet â€” start the conversation!</p>
    <% } else { %>
        <ul class="list-group shadow-sm">
            <% secrets.forEach(secret => { %>
                <li class="list-group-item">
                    <i class="fas fa-quote-left text-secondary me-2"></i>
                    <%= secret.content %>
                    <small class="text-muted float-end">
                        <%= new Date(secret.createdAt).toLocaleString() %>
                    </small>
                </li>
            <% }) %>
        </ul>
    <% } %>
</div>

